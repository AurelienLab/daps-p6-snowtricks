{% extends 'email/base.html.twig' %}

{% block content %}
    {% include 'email/_intro.html.twig' with { text: 'snowtricks.email.reset_password.introduction'|trans } %}

    {% include 'email/_paragraph.html.twig' with { text: 'snowtricks.email.reset_password.paragraph_reset'|trans } %}

    {% include 'email/_button.html.twig' with {
        text : 'snowtricks.email.reset_password.button'|trans,
        url: url('app_reset_password', {token: resetToken.token})
    } %}

    {% set paragraph %}
        {{ 'snowtricks.email.reset_password.paragraph_expiration'|trans }}
        {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
        <br><br>
        {{ 'snowtricks.email.cheers'|trans }}
    {% endset %}

    {% include 'email/_paragraph.html.twig' with { text: paragraph } %}
{% endblock %}
