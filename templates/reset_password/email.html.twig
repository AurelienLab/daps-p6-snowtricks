{% extends 'email/base.html.twig' %}

{% block content %}
    {% include 'email/_intro.html.twig' with { text: 'Hi! You forgot your password ?'} %}

    {% set paragraph %}
        To reset it, please visit the following link.
    {% endset %}

    {% include 'email/_paragraph.html.twig' with { text: paragraph } %}

    {% include 'email/_button.html.twig' with {
        text : 'Renew my password',
        url: url('app_reset_password', {token: resetToken.token})
    } %}

    {% set paragraph %}
        This link will expire
        in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
        <br><br>
        Cheers !
    {% endset %}

    {% include 'email/_paragraph.html.twig' with { text: paragraph } %}
{% endblock %}
