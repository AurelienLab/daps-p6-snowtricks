{% extends 'base.html.twig' %}

{% form_theme requestForm '_form-template/snowtricks_tailwind2_security.html.twig' %}

{% block title %}{{ 'snowtricks.ui.forgot_password'|trans }}{% endblock %}

{% block body %}
    <main class="px-4 py-8 sm:py-14 min-h-dvh sm:min-h-0 flex justify-center items-center">
        <div class="flex flex-col justify-center items-center w-full max-w-2xl m-auto rounded-2xl shadow-xl border py-10 sm:py-14 px-8 ">
            {% for flash_error in app.flashes('verify_email_error') %}
                {% include 'components/_alert.html.twig' with { message: flash_error, type: 'danger' } %}
            {% endfor %}

            <h1 class="text-4xl text-bold mb-8 bebas-neue-regular">{{ 'snowtricks.ui.forgot_password'|trans }}</h1>

            {{ form_start(requestForm, { attr: {class: "flex flex-col gap-6 w-full m-auto max-w-96", novalidate: 'novalidate'} }) }}
            {{ form_row(requestForm.email) }}
            <div class="mb-6">
                <small>
                    {{ 'snowtricks.ui.reset_password.email_help'|trans }}
                </small>
            </div>

            <button type="submit"
                    class="w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                {{ 'snowtricks.ui.reset_password.request_button'|trans }}
            </button>
            {{ form_end(requestForm) }}
        </div>
    </main>
{% endblock %}
