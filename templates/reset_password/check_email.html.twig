{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <main class="px-4 py-8 sm:py-14 min-h-dvh sm:min-h-0 flex justify-center items-center">
        <div class="flex flex-col justify-center items-start w-full max-w-2xl m-auto rounded-2xl shadow-xl border py-10 sm:py-14 px-8 ">
            <h1 class="text-4xl text-bold mb-8 bebas-neue-regular text-center self-center">{{ 'snowtricks.ui.forgot_password'|trans }}</h1>

            <p>
                {{ 'snowtricks.ui.reset_password.confirm_message'|trans }}

                {{ 'snowtricks.ui.reset_password.confirm_expiration'|trans }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                .
            </p>
            <p class="mt-2">{{ 'snowtricks.ui.reset_password.confirm_spam'|trans }} <a
                        class="text-indigo-500 underline hover:no-underline"
                        href="{{ path('app_forgot_password_request') }}">{{ 'snowtricks.ui.reset_password.confirm_retry'|trans }}</a>.
            </p>
        </div>
    </main>
{% endblock %}
