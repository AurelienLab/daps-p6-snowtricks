{% extends 'email/base.html.twig' %}

{% block content %}
    {% include 'email/_intro.html.twig' with { text: 'snowtricks.email.email_confirmation.introduction'|trans} %}

    {% set paragraph %}
        {{ 'snowtricks.email.email_confirmation.paragraph_confirm'|trans }} <br><br>
        {{ 'snowtricks.email.email_confirmation.paragraph_expiration'|trans }} {{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}.
    {% endset %}

    {% include 'email/_paragraph.html.twig' with { text: paragraph } %}

    {% include 'email/_button.html.twig' with {
        text : 'snowtricks.email.email_confirmation.button'|trans,
        url: signedUrl|raw
    } %}

    {% include 'email/_paragraph.html.twig' with { text: 'snowtricks.email.cheers'|trans } %}

{% endblock %}
