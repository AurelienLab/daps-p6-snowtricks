{% extends 'email/base.html.twig' %}

{% block content %}
    {% include 'email/_intro.html.twig' with { text: 'Hi! Please confirm your email!'} %}

    {% set paragraph %}
        Please confirm your email address by clicking the following button. <br>
        This link will expire in {{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}.
    {% endset %}

    {% include 'email/_paragraph.html.twig' with { text: paragraph } %}

    {% include 'email/_button.html.twig' with {
        text : 'Confirm my Email',
        url: signedUrl|raw
    } %}

    {% include 'email/_paragraph.html.twig' with { text: 'Cheers' } %}

{% endblock %}
