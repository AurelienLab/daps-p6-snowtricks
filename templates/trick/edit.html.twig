{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <main class="container mx-auto mb-16 sm:mb-0 px-4 py-8 sm:py-24 sm:px-6 lg:px-8">
        <div class="rounded-2xl w-full shadow-xl overflow-hidden">
            {# HERO BANNER #}
            <div class="relative flex w-full h-96 justify-center items-center overlay">
                <img class="z-0 absolute h-full w-full object-cover"
                     src="{{ asset('images/placeholder-hero.jpg') }}">
                <div class="z-10">
                    <div class="text-white text-lg">{{ form_label(form.name) }}</div>
                    {{ form_widget(form.name, { attr : { class : "bebas-neue-regular text-3xl"}}) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="py-6 px-4 sm:px-8">

                {# --------------- #}
                {#  MEDIA SECTION  #}
                {# --------------- #}

                {% if not trick.medias.empty %}
                    <div class="trick-media justify-center flex-wrap mb-8 gap-4 hidden sm:flex trick-medias">
                        {% for media in medias %}
                            {% include media.tempate with { media } %}
                        {% endfor %}
                    </div>
                    <div class="text-center mb-8">
                        <button type="button"
                                class="sm:hidden rounded-md bg-indigo-50 px-2.5 py-1.5 flex items-center gap-2 m-auto text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100 js-show-medias">
                            See medias {{ heroicon('arrow-down', 'w-3 h-3') }}
                        </button>
                        <button type="button"
                                class="sm:hidden rounded-md bg-indigo-50 px-2.5 py-1.5 hidden items-center gap-2 m-auto text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100 js-hide-medias">
                            Hide medias {{ heroicon('arrow-up', 'w-3 h-3') }}
                        </button>
                    </div>
                {% endif %}

                {# -------------- #}
                {#  DATA SECTION  #}
                {# -------------- #}

                {{ form_row(form.description, { attr: { class: "flex flex-col w-full mt-4", rows: 8}}) }}

                <div class="flex flex-row w-full items-center justify-between gap-3 mt-8">
                    {{ form_row(form.trickCategory, {attr : {class: 'flex flex-col'}}) }}
                    <div class="flex gap-3">
                        <a href="{{ path('app_trick_show', { slug: trick.slug }) }}"
                           class="rounded-full bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                            {{ 'snowtricks.ui.cancel'|trans }}
                        </a>

                        <button type="submit"
                                class="rounded-full bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            {{ 'snowtricks.ui.save'|trans }}
                        </button>
                    </div>
                </div>

            </div>
        </div>
        {{ form_end(form) }}
    </main>
{% endblock %}
