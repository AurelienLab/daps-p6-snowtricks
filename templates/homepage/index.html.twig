{% extends 'base.html.twig' %}

{% block body %}
    <div class="hero">
        <img src="https://images.unsplash.com/photo-1576837839711-7db60e14a18f?q=80&w=2187&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
             alt="">
        <div class="hero__content bebas-neue-regular">
            Ride, jump, repeat.
        </div>
        <div class="hero__down-button">
            <a href="#tricks">
                {{ heroicon('arrow-down', 'w-9 h-9') }}
            </a>
        </div>

        <div class="absolute py-5 z-50">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    {% include 'components/_alert.html.twig' with { message, type } %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    {% include 'trick/_index.html.twig' %}
{% endblock %}
