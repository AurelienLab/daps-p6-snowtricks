{% use 'tailwind_2_layout.html.twig' %}

{# https://symfony.com/doc/current/form/tailwindcss.html#project-specific-form-layout #}
{%- block form_row -%}
    {%- set row_class = row_class|default('flex flex-col items-center gap-2 w-full') -%}
    {{- parent() -}}
{%- endblock form_row -%}

{%- block widget_attributes -%}
    {%- set widget_class = widget_class|default('rounded w-full border-gray-400') -%}
    {{- parent() -}}
{%- endblock widget_attributes -%}

{%- block form_errors -%}
    {%- set error_item_class = error_item_class|default('text-red-700') -%}
    {{- parent() -}}
{%- endblock form_errors -%}

{%- block checkbox_widget -%}
    {%- set widget_class = widget_class|default('mr-2') -%}
    {{- parent() -}}
{%- endblock checkbox_widget -%}
