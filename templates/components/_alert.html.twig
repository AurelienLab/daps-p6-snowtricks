{% set types = {
    success: {
        backgroundColor : 'bg-green-50',
        icon : 'check-circle',
        iconColor : 'text-green-400',
        textColor : 'text-green-800'
    }
} %}


<div class="rounded-md p-4 {{ types[type].backgroundColor }} w-full mb-4">
    <div class="flex">
        <div class="flex-shrink-0">
            {{ heroicon(types[type].icon, 'h-5 w-5 ' ~ types[type].iconColor , 'solid') }}
        </div>
        <div class="ml-3">
            <p class="text-sm font-medium {{ types[type].textColor }}">{{ message|trans }}</p>
        </div>
    </div>
</div>